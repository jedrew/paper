keywords = {GALAXY: STELLAR CONTENT,GALAXY: STRUCTURE,INFRARED: STARS},
pages = {597--607},
title = {{Stellar populations and inhomogeneities of the galactic plane from DENIS star counts.}},
url = {http://adsabs.harvard.edu/abs/1997A\&A...326..597R},
