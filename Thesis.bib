month = feb,
number = {1},
pages = {435--452},
title = {{Bayesian inference of stellar parameters and interstellar extinction using parallaxes and multiband photometry}},
url = {http://adsabs.harvard.edu/abs/2011MNRAS.411..435B},
volume = {411},
year = {2011}
}
@article{Sellwood2002,
