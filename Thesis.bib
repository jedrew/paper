issn = {0004-6361},
journal = {A\&A},
keywords = {ISM: clouds,ISM: individual objects: WB 89-789 (IRAS 06145+145,stars: formation,stars: pre-main sequence},
month = mar,
number = {3},
pages = {909--920},
title = {{A star cluster at the edge of the Galaxy}},
