file = {:local/home/hfarnhill/Papers/Haywood, Robin, Creze - 1997 - A\&A - The evolution of the Milky Way disc. I. Vertical structure and local constraints.pdf:pdf},
journal = {A\&A},
keywords = {GALAXY: EVOLUTION,GALAXY: SOLAR NEIGHBOURHOOD,GALAXY: STELLAR CONTENT,GALAXY: STRUCTURE,MASS FUNCTION,STARS: LUMINOSITY FUNCTION},
