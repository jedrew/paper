keywords = {Galaxy: disc,Galaxy: stellar content,ISM: general,stars: general,surveys,white dwarfs},
month = aug,
number = {4},
pages = {2727--2741},
title = {{A determination of the space density and birth rate of hydrogen-line (DA) white dwarfs in the Galactic plane, based on the UVEX survey}},
