doi = {10.1088/0004-637X/708/1/834},
issn = {0004-637X},
journal = {ApJ},
keywords = {Galaxy: center,mass function,stars: early-type,stars: luminosity function},
month = jan,
number = {1},
pages = {834--840},
title = {{AN EXTREMELY TOP-HEAVY INITIAL MASS FUNCTION IN THE GALACTIC CENTER STELLAR DISKS}},
