journal = {A\&A},
keywords = {Galaxy: disk,Galaxy: evolution,Galaxy: formation,Galaxy: halo,Galaxy: stellar content,Galaxy: structure},
month = sep,
pages = {A13},
title = {{Constraining the thick disc formation scenario of the Milky Way}},
