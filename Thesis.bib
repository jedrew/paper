issn = {0094243X},
journal = {AIP Conference Proceedings},
keywords = {Interstellar dust grains,diffuse emission,infrared cirrus},
pages = {103},
publisher = {AIP},
title = {{Interstellar dust: what is it, how does it evolve, and what are its observational consequences?}},
url = {http://adsabs.harvard.edu/abs/2005AIPC..761..103D},
volume = {761},
year = {2005}
}
