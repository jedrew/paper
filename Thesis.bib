journal = {ApJ},
keywords = {Astronomical Models,Cosmic Background Explorer Satellite,Galactic Bulge,Galactic Mass,Galactic Structure,Image Processing,Luminosity,Mapping,Morphology,Near Infrared Radiation,Star Distribution,Stellar Evolution},
