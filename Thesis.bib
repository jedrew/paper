author = {Lallement, R. and Vergely, J.-L. and Valette, B. and Puspitarini, L. and Eyer, L. and Casagrande, L.},
doi = {10.1051/0004-6361/201322032},
file = {:home/hfarnhill/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Lallement et al. - 2014 - 3D maps of the local ISM from inversion of individual color excess measurements.pdf:pdf},
issn = {0004-6361},
journal = {A\&A},
keywords = {ISM: bubbles,ISM: clouds,dust,extinction,local insterstellar matter},
month = jan,
