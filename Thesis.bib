file = {:home/hfarnhill/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Haywood, Robin, Creze - 1997 - The evolution of the Milky Way disc. II. Constraints from star counts at the galactic poles.pdf:pdf},
journal = {A\&A},
keywords = {GALAXY: EVOLUTION,GALAXY: STELLAR CONTENT,GALAXY: STRUCTURE},
pages = {440},
title = {{The evolution of the Milky Way disc. II. Constraints from star counts at the galactic poles.}},
